        Gaming {
            display-name = "Gaming";
            bindings = <
            //              ╭───────────────┬─────────────┬─────────────┬─────────────┬─────────────╮ ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
                               &kp TAB         &kp Q         &kp W         &GamEI        &GamRT           ______        ______        ______        ______        ______
            //              ├───────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
                               &kp LCTL        &kp A         &kp S         &kp D         &GamFG           ______        ______        ______        ______        ______
            //╭─────────────┬───────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┬─────────────╮
                &tg 0          &kp LALT        &kp Z         &kp X         &kp C         &GamVB           ______        ______        ______        ______         ______       &tg 0 
            //╰─────────────┬───────────────┼─────────────┴─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┴─────────────┴─────────────┴─────────────╯             
                                                             ______        &kp SPACE     ______           ______        ______        ______
            //                                            ╰─────────────┴─────────────┴─────────────╯ ╰─────────────┴─────────────┴─────────────╯
            >;
        };

        Mouse {
            display-name = "Mouse";
            bindings = <
            //              ╭───────────────┬─────────────┬─────────────┬─────────────┬─────────────╮ ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
                              ______          ______         ______         ______        ______         ______        ______        ______        ______        ______
            //              ├───────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
                              ______          ______         ______         ______        ______         ______        ML            MD            MU            MR
            //╭─────────────┬───────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┬─────────────╮
                ______        ______          ______         ______         ______        ______         ______        SL            SD            SU            SR             ______ 
            //╰─────────────┬───────────────┼─────────────┴─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┴─────────────┴─────────────┴─────────────╯             
